{
    "compilerOptions": {
      "outDir": "./dist",
      "lib": ["ES2015", "DOM"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
    },
    "resolve": {
        "extensions": [".ts", ".js", ".json"],
    },
    "include": ["src/**/*","./**/*.d.ts" ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
